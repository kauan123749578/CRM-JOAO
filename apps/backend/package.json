{
  "name": "@crm/backend",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "node --watch --enable-source-maps dist/main.js",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push --skip-generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "ts-node prisma/seed.ts",
    "db:push": "prisma db push --skip-generate",
    "db:init": "node dist/scripts/init-db.js || echo 'Init DB skipped'"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.8",
    "@nestjs/core": "^10.4.8",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.4.8",
    "@nestjs/platform-socket.io": "^10.4.8",
    "@nestjs/serve-static": "^4.0.2",
    "@prisma/client": "^5.22.0",
    "@types/bcrypt": "^6.0.0",
    "@types/multer": "^2.0.0",
    "@types/passport-jwt": "^4.0.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "whatsapp-web.js": "^1.26.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/node-fetch": "^2.6.13",
    "prisma": "^5.22.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
